create table kniha (
kniha_id INTEGER PRIMARY KEY,
nazev text not  null,
autor integer not null,
zanr integer not null,
pocet_stranek integer not null
)

create table autor(
autor_id integer primary key,
fullname text not null
)

create table zanr(
zanr_id integer primary key,
zanr text not null
)

commit ;

insert into kniha(nazev, autor, zanr, pocet_stranek)
values
    ('Spalovač mrtvol', 1, 1, 144),
    ('Pejsek a kočička', 2, 2, 120)


insert into zanr(zanr) 
values
    ('Román'),
    ('Pohádka')

insert into autor(fullname)
values 
    ('Ladislav Fuks'),
    ('Josef Čapek')

select *
from kniha

select *
from autor

select *
from zanr
select kniha.autor, autor.fullname
from kniha
left join autor
on autor = autor_id

delete from kniha where kniha_id = 2 or 3;  
